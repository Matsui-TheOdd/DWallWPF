<tsd:ApplicationWindowBase x:Class="IntraforDrawing.MainWindow"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:UIControls="clr-namespace:Tekla.Structures.Dialog.UIControls;assembly=Tekla.Structures.Dialog"
                           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                           xmlns:local="clr-namespace:IntraforDrawing"
                           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                           xmlns:tsd="clr-namespace:Tekla.Structures.Dialog;assembly=Tekla.Structures.Dialog"
                           xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Margin="0"
                           mc:Ignorable="d"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Width="800">
    <d:UserControl.DataContext>
        <local:MainWindowViewModel />
    </d:UserControl.DataContext>

    <tsd:ApplicationWindowBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Lime.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Button">
                <Setter Property="Margin"
                        Value="2,0,2,0"></Setter>
                <Setter Property="Background"
                        Value="LightGray"></Setter>
                <Setter Property="Width"
                        Value="auto"></Setter>

                <Setter Property="HorizontalContentAlignment"
                        Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment"
                        Value="Center"></Setter>
                <Setter Property="Padding"
                        Value="1"></Setter>
            </Style>
            <Style TargetType="Label">
                <Setter Property="HorizontalAlignment"
                        Value="Left"></Setter>
                <Setter Property="VerticalAlignment"
                        Value="Center"></Setter>
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Padding"
                        Value="0.5"></Setter>
            </Style>
            <Style TargetType="GroupBox">
                <Setter Property="Margin"
                        Value="1"></Setter>
                <Setter Property="Background"
                        Value="Transparent"></Setter>
                <Setter Property="Width"
                        Value="auto"></Setter>
                <Setter Property="Height"
                        Value="auto"></Setter>
            </Style>
            <Style TargetType="UIControls:WpfFilterCheckBox">
                <Setter Property="HorizontalAlignment"
                        Value="Left"></Setter>
                <Setter Property="VerticalAlignment"
                        Value="Center"></Setter>
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="VerticalContentAlignment"
                        Value="Center"></Setter>
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="Height"
                        Value="23"></Setter>
                <Setter Property="HorizontalAlignment"
                        Value="Left"></Setter>
                <Setter Property="VerticalAlignment"
                        Value="Center"></Setter>
                <Setter Property="HorizontalContentAlignment"
                        Value="Left"></Setter>
                <Setter Property="VerticalContentAlignment"
                        Value="Center"></Setter>
                <Setter Property="Margin"
                        Value="5,0,0,1"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Height"
                        Value="23"></Setter>
                <Setter Property="HorizontalAlignment"
                        Value="Stretch"></Setter>
                <Setter Property="VerticalAlignment"
                        Value="Stretch"></Setter>
                <Setter Property="Margin"
                        Value="5,1,1,1"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
                <Setter Property="TextWrapping"
                        Value="Wrap"></Setter>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Height"
                        Value="23"></Setter>
                <Setter Property="HorizontalAlignment"
                        Value="Stretch"></Setter>
                <Setter Property="VerticalAlignment"
                        Value="Stretch"></Setter>
                <Setter Property="Margin"
                        Value="5,1,1,1"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
                <Setter Property="TextWrapping"
                        Value="Wrap"></Setter>
            </Style>
            <Style TargetType="UIControls:WpfMaterialCatalog">
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Background"
                        Value="Transparent"></Setter>
                <Setter Property="Width"
                        Value="auto"></Setter>

                <Setter Property="HorizontalContentAlignment"
                        Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment"
                        Value="Center"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
                <Setter Property="BorderThickness"
                        Value="0"></Setter>
                <Setter Property="FontSize"
                        Value="12"></Setter>
            </Style>
            <Style TargetType="UIControls:WpfReinforcementCatalog">
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Background"
                        Value="Transparent"></Setter>
                <Setter Property="Width"
                        Value="auto"></Setter>

                <Setter Property="HorizontalContentAlignment"
                        Value="Center"></Setter>
                <Setter Property="VerticalContentAlignment"
                        Value="Center"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
                <Setter Property="BorderThickness"
                        Value="0"></Setter>
                <Setter Property="FontSize"
                        Value="12"></Setter>
            </Style>
            <Style x:Key="VerticalHeaderStyle"
                   TargetType="DataGridColumnHeader">
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <RotateTransform Angle="-90" />
                    </Setter.Value>
                </Setter>
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="MinWidth"
                        Value="120" />
                <Setter Property="Height"
                        Value="auto" />
                <Setter Property="Margin"
                        Value="3" />
            </Style>
            <Style x:Key="VerticalHeaderStyle_100"
                   TargetType="DataGridColumnHeader">
                <Setter Property="LayoutTransform">
                    <Setter.Value>
                        <RotateTransform Angle="-90" />
                    </Setter.Value>
                </Setter>
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="MinWidth"
                        Value="100" />
                <Setter Property="Height"
                        Value="auto" />
                <Setter Property="Margin"
                        Value="3" />
            </Style>
            <Style x:Key="DefaultTextColumnStyle"
                   TargetType="TextBlock">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="FontWeight"
                        Value="Normal" />
                <Setter Property="Foreground"
                        Value="Black" />
                <Setter Property="TextAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Stretch" />
                <Setter Property="Margin"
                        Value="1"></Setter>
                <Setter Property="Padding"
                        Value="1"></Setter>
            </Style>
            <Style x:Key="DefaultDataGridCell"
                   TargetType="DataGridCell">
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
            </Style>
            <Style x:Key="LightSkyBlue"
                   TargetType="DataGridCell">
                <Setter Property="Background"
                        Value="LightSkyBlue" />
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
            </Style>
            <Style x:Key="Moccasin"
                   TargetType="DataGridCell">
                <Setter Property="Background"
                        Value="Moccasin" />
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
            </Style>
            <Style x:Key="Orange"
                   TargetType="DataGridCell">
                <Setter Property="Background"
                        Value="Orange" />
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
            </Style>
            <Style x:Key="GreenYellow"
                   TargetType="DataGridCell">
                <Setter Property="Background"
                        Value="GreenYellow" />
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
            </Style>
            <Style x:Key="Violet"
                   TargetType="DataGridCell">
                <Setter Property="Background"
                        Value="Violet" />
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
            </Style>
            <Style x:Key="Silver"
                   TargetType="DataGridCell">
                <Setter Property="Background"
                        Value="Silver" />
                <Setter Property="Margin"
                        Value="0"></Setter>
                <Setter Property="Padding"
                        Value="0"></Setter>
            </Style>
        </ResourceDictionary>
    </tsd:ApplicationWindowBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <UIControls:WpfSaveLoad Grid.Row="0"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top" />
        <materialDesign:Card  Grid.Row="1"
                              Margin="5,2,5,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <GroupBox Grid.Column="0"
                          Grid.Row="0"
                          Header="Drawing List">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                  x:Name="DtG_Drawing"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  Sorting="DataGrid_No_Sorting"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  VerticalScrollBarVisibility="Disabled"
                                  Margin="0 0 0 5"
                                  ItemsSource="{Binding DrawingsIP, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                  MinHeight="200">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Tag"
                                            Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Panel,StringFormat=N3}"
                                                    HeaderStyle="{StaticResource VerticalHeaderStyle}"
                                                    ElementStyle="{StaticResource DefaultTextColumnStyle}"
                                                    CellStyle="{StaticResource Silver}"
                                                    Header="Panel" />

                                <DataGridTextColumn Binding="{Binding Tilte_1,StringFormat=N3}"
                                                    HeaderStyle="{StaticResource VerticalHeaderStyle}"
                                                    ElementStyle="{StaticResource DefaultTextColumnStyle}"
                                                    CellStyle="{StaticResource DefaultDataGridCell}"
                                                    Header="Tilte 1" />

                                <DataGridTextColumn Binding="{Binding Comment}"
                                                    HeaderStyle="{StaticResource VerticalHeaderStyle}"
                                                    ElementStyle="{StaticResource DefaultTextColumnStyle}"
                                                    CellStyle="{StaticResource Silver}"
                                                    Header="Note" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    Margin="0, 0, 0, 5">
                            <UIControls:WpfFilterCheckBox AttributeName="AT_Max_Length"
                                                          Content="Max Panel Length:" />
                            <TextBox Height="23"
                                     Width="80"
                                     Text="{Binding AT_Max_Length, Mode=TwoWay}" />

                            <UIControls:WpfFilterCheckBox AttributeName="AT_Tilte_1"
                                                          Content="First Drawing Title:" />
                            <TextBox Height="23"
                                     Width="130"
                                     Text="{Binding AT_Tilte_1, Mode=TwoWay}" />
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal">
                            <Button Content="Create Drawings"
                                    Width="110"
                                    Height="23"
                                    Command="{Binding Create_Drawings}"></Button>
                            <Button Content="Get Exist Drawings"
                                    Width="120"
                                    Height="23"
                                    Command="{Binding Get_Exist_Drawings}"></Button>
                            <Button Content="Create Reports (BBS)"
                                    Height="23"
                                    Width="120"
                                    Command="{Binding Create_Reports}"></Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="1"
                          Grid.Row="0"
                          Header="Horizontal Section">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                  x:Name="DtG_HorizontalSection"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  ItemsSource="{Binding HorizontalSectionsIP, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged  }"
                                  Margin="0 0 0 5"
                                  Sorting="DataGrid_No_Sorting"
                                  CanUserAddRows="True"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  SelectionMode="Extended"
                                  SelectionUnit="Cell"
                                  KeyDown="DtG_HorizontalSection_KeyDown"
                                  SelectedCellsChanged="DtG_HorizontalSection_SelectedCellsChanged"
                                  MinHeight="200">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Tag"
                                            Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu>
                                                <MenuItem Header="Delete rows"
                                                          Command="{Binding PlacementTarget.Tag.DelRow_HorizontalSectionIP_Command, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                </MenuItem>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Panel, StringFormat=N3}"
                                                    HeaderStyle="{StaticResource VerticalHeaderStyle}"
                                                    ElementStyle="{StaticResource DefaultTextColumnStyle}"
                                                    CellStyle="{StaticResource DefaultDataGridCell}"
                                                    Header="Panel" />

                                <DataGridTextColumn Binding="{Binding Level,StringFormat=N3}"
                                                    HeaderStyle="{StaticResource VerticalHeaderStyle}"
                                                    ElementStyle="{StaticResource DefaultTextColumnStyle}"
                                                    CellStyle="{StaticResource Silver}"
                                                    Header="Level" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Grid.Row="1"
                                    Orientation="Vertical"
                                    Margin="0">
                            <Button Content="Suggest Section"
                                    Width="120"
                                    Height="23"
                                    Command="{Binding Suggest_Section}"></Button>
                            <Button Content="Modify Drawing"
                                    Width="120"
                                    Height="23"
                                    Margin="0 5 0 0"
                                    Command="{Binding Modify_Drawing}"></Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </materialDesign:Card>
    </Grid>
</tsd:ApplicationWindowBase>
